FROM python:3.10-slim

WORKDIR /app

RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY app ./app
COPY model ./model
COPY data ./data
COPY dashboardv3.py .
COPY start.sh .

RUN chmod +x start.sh

EXPOSE 8000 8050

CMD ["./start.sh"]
